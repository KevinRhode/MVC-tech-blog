<!-- Loop over each object in the blogpost array -->
<div> {{!-- to handle css justify content for dashboard--}}

<div class="col mb-4 blogpost">
  <div class="blogpost-header" >
    <div>
      <a class="no-button" href="/blogpost/{{id}}">{{title}}</a> 
    </div>
    <div style="text-align: end;">
      Posted by {{user.name}} on {{format_date date_created}}
    </div>
  </div>
  <div class="blogpost-content">
     <p>
      {{description}}
    </p>
  </div>
</div>


{{#each comments as |comment| }}

<div class="access-border " style="margin:1rem 0rem;">
  <div class="blogpost-header" ></div>{{!-- header styling to match other comment areas--}}
 
<div class="access-login comment" style="padding-top:0.8rem">
    

        <label>{{comment.description}}</label>{{!-- content of the comment--}}
        <br>
        <label>--{{comment.user.name}} , {{format_date comment.date_created}}</label>{{!-- name and date of when person placed comment --}}
        
      </div>
     
   
  </div>
   
{{/each}}
{{!-- <div class="row"> --}}

</div>
