<!-- Loop over each object in the blogpost array -->
<div> {{!-- to handle css justify content for dashboard--}}

<div class="col mb-4 blogpost">
  <div class="blogpost-header">
    <div>
      <a class="no-button" href="/blogpost/{{id}}">{{title}}</a> 
    </div>
    <div style="text-align: end;">
      Posted by {{user.name}} on {{format_date date_created}}
    </div>
  </div>
  <div class="blogpost-content">
     <p>
      {{description}}
    </p>
  </div>
</div>
{{!-- <div class="row"> --}}
<div class="access-border">
 
<div class="access-login">
    

    <form class="form comment-form">
     
        <label for="Comment">Comment</label>
        <textarea class="form-input" data-uid="{{user_id}}" data-bid="{{id}}" type="text" rows="3" id="Comment"></textarea>
      </div>
     
      <div class="form-group">
        <button class="btn-access btn btn-primary" type="submit">Comment!</button>
      </div>
     
      

      
    </form>
  </div>
  </div>  
</div>
