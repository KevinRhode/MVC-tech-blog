<div class="col mb-4 blogpost">
  <div class="blogpost-header" >
    <div>
      <a class="no-button" href="/blogpost/{{id}}">{{title}}</a> 
    </div>
    <div style="text-align: end;">
      Posted by {{user.name}} on {{format_date date_created}}
    </div>
  </div>
  <div class="blogpost-content">
     <p>
      {{description}}
    </p>
  </div>
</div>